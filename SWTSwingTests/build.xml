<?xml version="1.0"?>
<project name="SWTSwing Tests Build Script" default="createJar">

  <target name="createJar" description="Create the Jar files">
    <delete file="../SWTSwing/SWTSwingTests.jar"/>
    <jar duplicate="preserve" destfile="../SWTSwing/SWTSwingTests.jar">
      <fileset dir="bin"/>
      <fileset dir="../org.eclipse.swt.snippets/bin"/>
      <fileset dir="../org.eclipse.swt.snippets/src"/>
      <manifest>
        <attribute name="Main-Class" value="chrriis.swtswing.SnippetLauncherUI"/>
        <attribute name="Class-Path" value="SWTSwing.jar"/>
      </manifest>
    </jar>
  </target>

</project>
